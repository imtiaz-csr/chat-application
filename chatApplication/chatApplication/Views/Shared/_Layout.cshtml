<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.bundle.js"></script>

    <style>
        body {
            padding-top: 70px;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-light bg-white navbar-expand-md fixed-top border-bottom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Chat App</a>

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>

                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Chat" asp-action="Index">Chat</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>

